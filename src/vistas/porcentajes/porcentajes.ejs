<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Porcentajes</title>
    <link rel="stylesheet" href="/bootstrap.min.css">
    <link rel="stylesheet" href="/stylePorcentajes.css">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div id="contenedor">

        <header>
            <nav class="navbar navbar-dark bg-dark" id="navBar">
                <a class="navbar-brand">
                    <div class="row">
                        <div class="col-1">
                            <img src="/icono.png">
                        </div>
                        <div class="col">
                            <h5>Actidad 2 - Operaciones CRUD con NodeJS</h5>
                        </div>
                    </div>
                </a>
            </nav>
        </header>

        <div id="main">
            <div class="row" id="referencias">
                <div class="col-2">
                    <h3>
                        Porcentajes
                    </h3>
                    <a href="/" class="btn btn-outline-dark btnAtras">Regresar</a>
                </div>
                <div class="col-7">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Descripcion</th>
                                <th scope="col">Porcentaje</th>
                                <th colspan="2" scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%
                            var total = 0;
                        for(var i=0; i<data.length; i++)
                        {
                            total = total + data[i].porcentaje;
                        %>
                                <tr>
                                    <th scope="row">
                                        <%=data[i].id%>
                                    </th>
                                    <td>
                                        <%=data[i].descripcion%>
                                    </td>
                                    <td>
                                        <%=data[i].porcentaje%>
                                    </td>
                                    <td><a href="/porcentajes/editar/<%=data[i].id%>" class="btn btn-warning">Editar</a></td>
                                    <td><a href="/porcentajes/eliminar/<%=data[i].id%>" class="btn btn-danger">Eliminar</a></td>
                                </tr>
                                <%}%>
                        </tbody>
                    </table>
                    <h5>Porcentaje asignado:
                        <%=total%>%</h5>
                </div>
                <div class="col-1">
                    <div id="btnRegistrar">
                        <form action="SAlumnos" method="POST">
                            <a href="/porcentajes/nuevo" class="btn btn-success">Registrar Porcentaje</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <footer>
            <div class="row">
                <div class="col-3">
                    <img src="/icono.png">
                    <img src="/UTlogo.png">
                </div>
                <div class="col">
                    <h4>Actidad 2 - Operaciones CRUD con NodeJS - Porcentajes</h4>
                </div>
            </div>

            <div id="lineaFooter"></div>
            <p class="font-italic">actividad 2 - Â©copyright</p>
        </footer>

    </div>
    <script src="/bootstrap.bundle.min.js"></script>
</body>

</html>